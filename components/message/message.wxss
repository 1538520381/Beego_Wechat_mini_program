.message .messageRobot {
  text-align: left;
}

.message .messageUser {
  text-align: right;
}

.message .avatar {
  display: inline-block;

  vertical-align: top;

  margin: 5px 0 0 5px;

  width: 32px;
  height: 32px;

  border-radius: 50%;
}

.message .contentContainer {
  display: inline-block;

  margin: 2px 2px 0 2px;
  padding: 0 0 2px 0;

  max-width: calc(90% - 5px - 32px - 2px);

  border-radius: 10px;

  text-align: right;

  background-color: #EEEEEE;
}

.message .contentContainer .markdownMessage {
  display: inline-block;

  max-width: 100%;

  font-size: 16px;
}

.message .contentContainer .toolBar {
  padding: 0 10px 0 10px;

  width: calc(100% - 10px * 2);
}

.message .contentContainer .copyIcon {
  width: 22px;
  height: 22px;
}