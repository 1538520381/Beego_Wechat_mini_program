page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.personalInformation {
  width: 100%;
  height: 100%;
}

.personalInformation .header {
  display: flex;

  justify-content: space-between;

  width: 100%;
  height: 40px;

  background-color: #eeeeee;
}

.personalInformation .header .title {
  display: inline-block;

  margin: 0 0 0 10px;

  text-align: center;

  font-size: 18px;
  font-weight: bold;

  line-height: 40px;

  z-index: 0;
}

.personalInformation .header .button .confirmIcon{
  display: inline-block;

  margin: 5px 0 5px 0;

  width: 30px;
  height: 30px;
}

.personalInformation .header .button .confirmText{
  display: inline-block;

  vertical-align: top;

  margin: 0 10px 0 0;

  font-size: 18px;

  line-height: 40px;
}

.personalInformation .main {
  text-align: center;
}

.personalInformation .main .userAvatar {
  margin: 15px 0 20px 0;

  width: 80px;
  height: 80px;

  border-radius: 50%;
}

.personalInformation .main .item {
  width: 100%;
  height: 50px;

  text-align: left;
}

.personalInformation .main .item .key {
  display: inline-block;

  vertical-align: top;

  margin: 0 0 0 20px;

  width: 100px;

  font-size: 20px;

  line-height: 50px;
}

.personalInformation .main .item .value {
  display: inline-block;

  margin: 0 0 0 20px;

  width: calc(90% - 20px - 100px - 20px);
  height: 100%;

  font-size: 16px;

  line-height: 50px;
}

.personalInformation .main .item .value .placeholder{
  color: #808080;
}

.personalInformation .main .divLine {
  margin: 0 0 0 2%;

  width: 96%;
  height: 4rpx;

  background: #E0E3DA;
}
