page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.personalCenter {
  width: 100%;
  height: 100%;
}

.personalCenter .header {
  display: flex;

  justify-content: space-between;

  width: 100%;
  height: 40px;

  background-color: #eeeeee;
}

.personalCenter .header .backIcon {
  margin: 5px 5px 0 5px;

  width: 30px;
  height: 30px;
}

.personalCenter .header .title {
  display: inline-block;

  position: absolute;

  left: calc(50% - 100px / 2);

  vertical-align: top;

  width: 100px;

  text-align: center;

  font-size: 18px;
  font-weight: bold;

  line-height: 40px;

  z-index: 0;
}

.personalCenter .main {
  text-align: center;
}

.personalCenter .main .userAvatar {
  margin: 15px 0 0 0;

  width: 80px;
  height: 80px;

  border-radius: 50%;
}

.personalCenter .main .uploadAvatar{
  margin: 10px auto 0 auto;
  padding: 0 0 0 0;

  width: 120px;
  height: 30px;

  line-height: 30px;

  font-size: 15px;
}

.personalCenter .main .item {
  width: 100%;
  height: 50px;

  text-align: left;
}

.personalCenter .main .item .key {
  display: inline-block;

  margin: 0 0 0 20px;

  width: 100px;

  font-size: 20px;

  line-height: 50px;
}

.personalCenter .main .item .value {
  display: inline-block;

  margin: 0 0 0 20px;

  font-size: 20px;

  line-height: 50px;
}

.personalCenter .main .divLine {
  margin: 0 0 0 2%;

  width: 96%;
  height: 4rpx;

  background: #E0E3DA;
}
