page {
  width: 100%;
  height: 100%;
}

.workbench {
  width: 100%;
  height: 100%;
}

.workbench .menu .mask {
  position: absolute;

  top: 0;
  left: 0;

  width: 100%;
  height: 100%;

  background: #000000;

  opacity: 0.2;

  z-index: 1;
}

.workbench .menu .menuSidebar {
  position: absolute;

  top: 0;
  left: 0;

  width: 80%;
  max-width: 250px;
  height: 100%;

  background-color: #ffffff;

  z-index: 2;
}

.workbench .menu .menuSidebar .robotMenu {
  padding: 5px 0 5px 0;
}

.workbench .menu .menuSidebar .robotMenu .robot {
  height: 40px;
}

.workbench .menu .menuSidebar .robotMenu .robotActive {
  background-color: #eeeeee;
}

.workbench .menu .menuSidebar .robotMenu .robot .robotAvatar {
  display: inline-block;

  margin: 5px 0 5px 5px;

  width: 30px;
  height: 30px;

  border-radius: 50%;
}

.workbench .menu .menuSidebar .robotMenu .robot .robotName {
  display: inline-block;

  vertical-align: top;

  margin: 0 5px 0 5px;

  width: calc(100% - 5px - 30px - 5px * 2);

  font-size: 18px;

  line-height: 40px;

  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.workbench .menu .menuSidebar .divLine {
  margin: 0 0 0 2%;

  width: 96%;
  height: 2px;

  background: #E0E3DA;
}

.workbench .header {
  display: flex;

  justify-content: space-between;

  width: 100%;
  height: 40px;

  background-color: #eeeeee;
}

.workbench .header .menuIcon {
  margin: 5px 5px 0 5px;

  width: 30px;
  height: 30px;
}

.workbench .header .title {
  display: inline-block;

  position: absolute;

  left: calc(50% - 100px / 2);

  vertical-align: top;

  width: 100px;

  text-align: center;

  font-size: 20px;
  font-weight: bold;

  line-height: 40px;

  z-index: 0;
}

.workbench .header .userAvatar {
  margin: 5px 5px 0 5px;

  width: 30px;
  height: 30px;

  border-radius: 50%;
}

.workbench .chatContainer{
  height: calc(100% - 40px);
}