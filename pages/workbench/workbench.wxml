      </view>
      <textarea class="input" value="{{input}}" bindinput="input" placeholder="开始创作你的提示词吧" auto-height maxlength="-1"></textarea>
    </view>
    <button class="send" bind:tap="longTextDialogueSubmit" data-="{{null}}">发送</button>
  </view>
</view>