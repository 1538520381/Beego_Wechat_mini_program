page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.workbench {
  display: flex;

  position: relative;

  flex-direction: column;

  width: 100%;
  height: 100%;
}

.workbench .mask {
  position: absolute;

  top: 0;
  left: 0;

  width: 100%;
  height: 100%;

  background: #000000;

  opacity: 0.2;

  z-index: 1;
}

.workbench .menuSidebar {
  position: absolute;

  top: 0;
  left: 0;

  width: 75%;
  height: 100%;

  background-color: #ffffff;

  z-index: 2;
}

.workbench .menuSidebar .robotMenu {
  padding: 5px 0 5px 0;
}

.workbench .menuSidebar .robotMenu .robot {
  height: 40px;
}

.workbench .menuSidebar .robotMenu .robotActive {
  background-color: #eeeeee;
}

.workbench .menuSidebar .robotMenu .robot .robotAvatar {
  display: inline-block;

  margin: 5px 0 5px 5px;

  width: 30px;
  height: 30px;

  border-radius: 50%;
}

.workbench .menuSidebar .robotMenu .robot .robotName {
  display: inline-block;

  vertical-align: top;

  margin: 0 0 0 5px;

  font-size: 18px;

  line-height: 40px;
}

.workbench .menuSidebar .divLine {
  margin: 0 0 0 2%;

  width: 96%;
  height: 4rpx;

  background: #E0E3DA;
}

.workbench .menuSidebar .sessionMenu .addSession {
  margin: 5px 0 5px 0;

  width: 100%;

  font-size: 16px;

  background-color: #ffffff;
}

.workbench .menuSidebar .sessionMenu .session {
  width: 100%;
  height: 40px;
}

.workbench .menuSidebar .sessionMenu .sessionActive {
  background-color: #eeeeee;
}

.workbench .menuSidebar .sessionMenu .session {
  display: flex;

  justify-content: space-between;
}

.workbench .menuSidebar .sessionMenu .session .sessionMessage {
  display: inline-block;

  padding: 0 0 0 10px;

  width: calc(80% - 10px);

  font-size: 16px;

  line-height: 40px;

  overflow: hidden;

  text-overflow: ellipsis;

  white-space: nowrap;
}

.workbench .menuSidebar .sessionMenu .session .deleteIcon {
  display: inline-block;

  vertical-align: top;

  margin: 8px 8px 0 0;

  width: 24px;
  height: 24px;
}

.workbench .header {
  display: flex;

  justify-content: space-between;

  width: 100%;
  height: 40px;

  background-color: #eeeeee;
}

.workbench .header .menuIcon {
  margin: 5px 5px 0 5px;

  width: 30px;
  height: 30px;
}

.workbench .header .title {
  display: inline-block;

  position: absolute;

  left: calc(50% - 100px / 2);

  vertical-align: top;

  width: 100px;

  text-align: center;

  font-size: 20px;
  font-weight: bold;

  line-height: 40px;

  z-index: 0;
}

.workbench .header .userAvatar {
  margin: 5px 5px 0 5px;

  width: 30px;
  height: 30px;

  border-radius: 50%;
}

.workbench .main {
  width: 100%;
}

.workbench .main .row .robotRow .robotAvatar {
  display: inline-block;

  vertical-align: top;

  margin: 5px 0 0 5px;

  width: 32px;
  height: 32px;

  border-radius: 50%;
}

.workbench .main .row .robotRow .robotMessage {
  display: inline-block;

  max-width: calc(90% - 5px - 32px - 10px);

  font-size: 16px;
}

.workbench .main .row .userRow {
  text-align: right;
}

.workbench .main .row .userRow .userMessageContainer {
  display: inline-block;

  margin: 0 4px 0 0;

  max-width: calc(90% - 5px - 32px - 10px);

  text-align: right;
}

.workbench .main .row .userRow .userMessageContainer .fileContainer .file {
  max-width: 100px;
  height: 50px;
}

.workbench .main .row .userRow .userMessageContainer .userMessage {
  font-size: 16px;

  text-align: left;
}

.workbench .main .row .userRow .userAvatar {
  display: inline-block;

  vertical-align: top;

  margin: 5px 5px 0 0;

  width: 32px;
  height: 32px;

  border-radius: 50%;
}

.workbench .footer {
  position: absolute;

  bottom: 0;

  width: 100%;
  height: auto;
  max-height: 300px;

  z-index: 0;
}

.workbench .footer .scrollToBottomButton{
  position: absolute;

  left: calc(50% - 30px / 2 - 2px / 2);
  top: -30px;

  width: 30px;
  height: 30px;

  border: 2px solid #DFE5EC;
  border-radius: 50%;

  background-color: #ffffff;
}

.workbench .footer .fileButton {
  margin: 8px 0 8px 6px;

  width: 24px;
  height: 24px;
}

.workbench .footer .inputArea {
  display: inline-block;

  vertical-align: bottom;

  margin: 6px 10px 5px 10px;

  width: calc(100% - 6px * 2 - 24px * 2 - 50px - 5px * 2 - 10px * 2);
}

.workbench .footer .inputArea .fileContainer {
  display: inline-block;

  position: relative;

  padding: 0 2px 2px 2px;
}

.workbench .footer .inputArea .fileContainer .removeFile {
  position: absolute;

  top: -6px;
  right: -6px;

  width: 12px;
  height: 12px;

  border-radius: 50%;

  background-color: #C9C9C9;
}

.workbench .footer .inputArea .fileContainer .file {
  max-width: 100px;
  height: 50px;
}

.workbench .footer .inputArea .input {
  padding: 2px 5px 2px 5px;

  width: calc(100% - 5px * 2);
  max-height: 90px;

  font-size: 14px;

  border: 1px solid;
  border-radius: 10px;
}

.workbench .footer .send {
  display: inline-block;

  vertical-align: bottom;

  margin: 5px 5px 5px 5px;
  padding: 0 0 0 0;

  width: 50px;
  height: 30px;

  font-size: 14px;

  line-height: 30px;

  color: #ffffff;

  background-color: #409EFF;
}