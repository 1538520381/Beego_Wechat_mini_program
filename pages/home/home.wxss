page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.home {
  flex: 1;
  overflow-y: hidden;

  background-color: #FFE1BE;
  /* background: -webkit-linear-gradient(top,#ffffff,#FACF94,#FFB55C); */
}

.home .header {
  display: flex;

  justify-content: space-between;

  width: 100%;
  height: 50px;
}

.home .header .leftHeader {
  height: 100%;
}

.home .header .leftHeader .logo {
  display: inline-block;

  margin: 10px 0 0 15px;

  height: 40px;
}

.home .header .leftHeader .subtitle {
  display: inline-block;

  vertical-align: top;

  height: 100%;

  line-height: 50px;

  font-size: 20px;
}

.home .main {
  display: inline-block;

  position: absolute;

  top: 0;
  left: 0;
  bottom: 0;
  right: 0;

  margin: auto;

  width: 100%;
  height: calc(100% - 50px);

  text-align: right;
}

.home .main .name {
  /* margin: 10px 0 0 0; */

  width: 80%;
}

.home .main .loginButton {
  margin-top: 25px;

  width: 50%;
  height: 40px;
}

.home .main .slogan1 {
  margin: 10px 0 0 0;

  height: 30px;

  font-size: 20px;
  font-weight: bold;
}

.home .main .slogan2 {
  margin: 10px 0 0 0;

  font-size: 14px;
}

.home .main .themeImage {
  height: 80%;
}

.home .main .loginRow {
  width: 100%;

  text-align: center;
}

.home .main .loginRow .loginButton {
  margin: 25px auto 0px auto;

  height: 60px;
}